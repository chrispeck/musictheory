\version "2.16.1" 
\language "english"

\include "ly/roman_numerals.ly"
<% if @form_count> 1
		my_title = @title + ", Form " + form_number.to_s
	else
		my_title = @title
	end
%>

\header {
		title = "<%=my_title%>" 
	<% if answer_key %>
		subtitle = "answer key"
	<% else %>
		subtitle = "please use a pencil"
	<% end %>
}

\paper {
	indent = #0
	%between-system-padding = #2
	%ragged-right = ##t
	ragged-bottom = ##t
}

<% @exercises.each do |ex| %>
	<%=ex.ly(answer_key)%>
<% end %>

\markup {
	\line { Thank you! }
}
